{{#each errors}}   <!-- Looping in handlebars -->
<div class="alert alert-danger">{{text}}</div> <!-- errors.text -->
{{else}}    <!-- If no errors -->
{{/each}}

<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="POST"><!-- Overriding post method with PUT from module -->
        <input type="hidden" name="_method" value="PUT">        <!-- Required to override post method -->
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" value={{idea.title}} required>
        </div>
        <div class="form-group">
            <label for="details">Details</label>
            <textarea name="details" class="form-control" required>{{idea.details}}</textarea> 
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>